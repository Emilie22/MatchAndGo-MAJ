{% extends 'base.html.twig' %}
{% block title %}Liste des utilisateurs{% endblock %}
	{% block body %}



                {# Liste des utilisateurs pour l'admin #}

<section class="heightPage">
     {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="messageFlash alert alert-{{ label }} m-0">{{ message }}</div>
                {% endfor %}
            {% endfor %}
    <div class="container bootstrap snippet">
        <div class="row">
            <div class="col-lg-12">
                <h3 class="formTitle text-center">Gérer les utilisateurs</h3>
                <div class="main-box no-header clearfix">
                    <div class="main-box-body clearfix ">
                        <div class="table-responsive">
                            <table class="table user-list">
                                <thead>
                                    <tr>
                                    <th><span>Prénom</span></th>
                                    <th><span>Nom</span></th>
                                    <th><span>Ville</span></th>
                                    <th><span>Email</span></th>
                                    <th>&nbsp;</th>
                                    </tr>
                                </thead>
                                <tbody>
                                	{% for user in users %}
                                    <tr>
                                        <td>
                                            <img src="{{ asset('uploads/user/image/' ~ user.picture) }}">
                                            <a href="{{ path('showProfileWithSlug', {slug: user.slug}) }}" class="user-link">{{ user.firstname }}</a>
                                        </td>
                                        <td>
                                            <span class="label label-default">{{ user.lastname }}</span>
                                        </td>
                                        <td>
                                            <span class="label label-default">{{ user.city }}</span>
                                        </td>
                                        <td>
                                            <span class="label label-default">{{ user.email }}</span>
                                        </td>
                                        <td style="width: 20%;">
                                            <a href="{{ path('showProfileWithSlug', {slug: user.slug}) }}" class="fas fa-search-plus searchUser">
                                            </a>
                                            <a href="{{ path('deleteUser', {id: user.id}) }}" class="fas fa-trash trashUser">
                                            </a>
                                        </td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}
