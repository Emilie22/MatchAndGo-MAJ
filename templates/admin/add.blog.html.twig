{% extends 'base.html.twig' %}

{% block title %}Ajouter un blog{% endblock %}

    {% block body %}

        <section class="heightPage">

            {# affichage des messages flash #}
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="messageFlash alert alert-{{ label }} m-0">{{ message }}</div>
                {% endfor %}
            {% endfor %}
            
            <div class="container-fluid formBackG">
                <div class="row justify-content-center">
                    <div class="col-12 col-md-4 form-group marginForm">
                        <h3 class="formTitle text-center">Ajouter un article au blog</h3>
                        {# debut du formulaire d'ajout d'article #}
                        {{ form_start(form) }}
                        <div class="form-group">{{ form_row(form.title, {'attr':{'class':'form-control formInput'}}) }}</div>
                        <div class="form-group">{{ form_row(form.content, {'attr':{'class':'form-control formInput'}}) }}</div>
                        <div class="form-group">{{ form_row(form.author, {'attr':{'class':'form-control formInput'}}) }}</div>
                        <div class="custom-file">{{ form_row(form.picture_blog) }}</div>
                        <div class="text-center"><button class="btn text-center formButton" type="submit">Enregistrer</button></div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </section>
        
    {% endblock %}