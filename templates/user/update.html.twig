{% extends 'base.html.twig' %}

{% block title %}Modification du profil{% endblock %}

	{% block body %}

	
		<section class="heightPage">
			<div class="container-fluid profileUpdateBg">
			{# affichage des messages flash #}
				{% for label, messages in app.flashes %}
					{% for message in messages %}
						<div class="messageFlashalert alert-{{ label }}">{{ message }}</div>
					{% endfor %}
				{% endfor %}
			

			{# Message d'erreur #}
			{# {% if errors is defined %}
					{% for error in errors %}
						<div class="alert alert-warning">{{ error.message }}</div>
					{% endfor %}
			{% endif %} #}
				<div class="row justify-content-center">
					<div class="col-12 col-md-9 col-lg-4">
						<div class="updateProfileBg">
							
							<h3 class="text-center mt-5">Modifier mon profil Match&Go</h3>
							<div class="form-group">

								{{ form_start(form) }}
								{{ form_errors(form) }}
								<div class="row mt-5">
									<div class="col-12 col-md-6">
										{{ form_label(form.firstname) }}
										{{ form_widget(form.firstname, {'attr':{'class':'col-12 col-md-12 form-control inputProfile'}}) }}
									</div>
									<div class="col-12 col-md-6">
										{{ form_label(form.lastname)}}
										{{ form_widget(form.lastname, {'attr':{'class':'col-12 col-md-12 form-control  inputProfile'}}) }}
									</div>
								</div>

								<div class="row">
									<div class="col-12 col-md-6 mb-2">
										{{ form_label(form.gender)}}
										{{ form_widget(form.gender, {'attr':{'class':'col-12 col-md-12 form-control inputProfile'}}) }}
									</div>

									<div class="col-12 col-md-6">
										{{ form_label(form.birthday)}}
										{{ form_widget(form.birthday, {'attr':{'class':'col-12 col-md-12 inputProfile'}}) }}
									</div>
								</div>
								<div class="row">
									<div class="col-12 col-md-6">
										{{ form_label(form.city)}}
										{{ form_widget(form.city, {'attr':{'class':'col-12 col-md-12 form-control inputProfile'}}) }}
									</div>
									<div class="col-12 col-md-6">
										{{ form_row(form.phone, {'attr':{'class':'col-12 col-md-12 form-control mb-2 inputProfile'}}) }}
									</div>
								</div>
								{{ form_row(form.picture, {'attr':{'class':'col-12 col-md-12 inputProfile mb-2 mr-5'}}) }}
								{{ form_row(form.description, {'attr':{'class':'form-control  inputProfile'}})  }}
								{{ form_row(form.countries, {'attr':{'class':'form-control  inputProfile'}}) }}
								{{ form_row(form.facebook, {'attr':{'class':'form-control  inputProfile'}}) }}
								{{ form_row(form.instagram, {'attr':{'class':'form-control  inputProfile'}}) }}
								{{ form_row(form.save, {'attr':{'class':'form-control mt-3 btn btnCreateProfile'}}) }} 

								{{ form_end(form) }}

							</div>
						</div> 
					</div>
				</div>
			</div>
		</section>
	{% endblock %}